{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5003"
  },
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/orders",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [{ "Host": "orderservice", "Port": 8080 }],
      "UpstreamPathTemplate": "/orderservice/api/orders",
      "UpstreamHttpMethod": ["POST", "GET"],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": ["orders.read", "orders.write"]
      },
      "RouteClaimsRequirement": {
        "http://schemas.microsoft.com/ws/2008/06/identity/claims/role": "User"
      }
    },
    {
      "DownstreamPathTemplate": "/api/orders/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [{ "Host": "orderservice", "Port": 8080 }],
      "UpstreamPathTemplate": "/orderservice/api/orders/{id}",
      "UpstreamHttpMethod": ["GET"],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": ["orders.read", "orders.write"]
      },
      "RouteClaimsRequirement": {
        "http://schemas.microsoft.com/ws/2008/06/identity/claims/role": "User"
      }
    },
    {
      "DownstreamPathTemplate": "/api/inventory/reservations",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [{ "Host": "inventoryservice", "Port": 8080 }],
      "UpstreamPathTemplate": "/inventoryservice/api/inventory/reservations",
      "UpstreamHttpMethod": ["POST"],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": ["inventory.read", "inventory.write"]
      },
      "RouteClaimsRequirement": {
        "http://schemas.microsoft.com/ws/2008/06/identity/claims/role": "User"
      }
    },
    {
      "DownstreamPathTemplate": "/api/inventory/adjustments",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [{ "Host": "inventoryservice", "Port": 8080 }],
      "UpstreamPathTemplate": "/inventoryservice/api/inventory/adjustments",
      "UpstreamHttpMethod": ["POST"],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": ["inventory.read", "inventory.write"]
      },
      "RouteClaimsRequirement": {
        "http://schemas.microsoft.com/ws/2008/06/identity/claims/role": "User"
      }
    }
  ]
}
